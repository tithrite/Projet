<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0" minWidth="800.0" prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.HomeController">
    
    <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 3);">
        <HBox alignment="CENTER_LEFT" spacing="15" HBox.hgrow="ALWAYS">
            <ImageView fitHeight="40" fitWidth="173.0" preserveRatio="true">
                <image>
                    <Image url="@../images/img.png" />
                </image>
            </ImageView>
            <Button onAction="#navigateToHome" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="ACCUEIL" />
            <Button onAction="#navigateToOwnerList" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="PROPRIÉTAIRES" />
            <Button onAction="#navigateToVeterinarians" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="VÉTÉRINAIRES" />
            <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="ERROR" />
        </HBox>
    </HBox>

    <VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #f5f5f5;" VBox.vgrow="ALWAYS">
        <Label style="-fx-font-size: 32px; -fx-text-fill: #111459; -fx-font-weight: bold;" text="Bienvenue sur VetCare360" textAlignment="CENTER">
            <VBox.margin>
                <Insets bottom="20" />
            </VBox.margin>
        </Label>
        
        <HBox alignment="CENTER" spacing="20" HBox.hgrow="ALWAYS">
            <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 3);" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 18px; -fx-text-fill: #7f8c8d;" text="Nombre Total de Propriétaires" />
                <Label fx:id="ownersCount" style="-fx-font-size: 32px; -fx-text-fill: #111459; -fx-font-weight: bold;" text="0" />
            </VBox>
            <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 3);" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 18px; -fx-text-fill: #7f8c8d;" text="Nombre Total d'Animaux" />
                <Label fx:id="petsCount" style="-fx-font-size: 32px; -fx-text-fill: #111459; -fx-font-weight: bold;" text="0" />
            </VBox>
            <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 3);" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 18px; -fx-text-fill: #7f8c8d;" text="Nombre de Vétérinaires" />
                <Label fx:id="vetsCount" style="-fx-font-size: 32px; -fx-text-fill: #111459; -fx-font-weight: bold;" text="0" />
            </VBox>
        </HBox>
        
        <!-- Cartes de fonctionnalités -->
        <HBox alignment="CENTER" spacing="20" HBox.hgrow="ALWAYS">
            <VBox style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 3);" HBox.hgrow="ALWAYS">
                <ImageView fitHeight="120" preserveRatio="true">
                    <Image url="@../images/PetCare.jpg" />
                </ImageView>
                <Label style="-fx-font-size: 20px; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-padding: 10 0;" text="Services pour Animaux" />
                <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d; -fx-wrap-text: true;" text="Soins professionnels pour vos animaux de compagnie" />
            </VBox>
            <VBox style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 3);" HBox.hgrow="ALWAYS">
                <ImageView fitHeight="120" preserveRatio="true">
                    <Image url="@../images/PetCare.jpg" />
                </ImageView>
                <Label style="-fx-font-size: 20px; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-padding: 10 0;" text="Vétérinaires Experts" />
                <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d; -fx-wrap-text: true;" text="Professionnels expérimentés à votre service" />
            </VBox>
        </HBox>

        <!-- Boutons d'action -->
        <HBox alignment="CENTER" spacing="15">
            <Button text="Nouveau Propriétaire" onAction="#navigateToNewOwner" style="-fx-background-color: #111459; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-weight: bold;" />
            <Button text="Nouvel Animal" onAction="#navigateToNewPet" style="-fx-background-color: #111459; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-weight: bold;" />
            <Button text="Nouveau Vétérinaire" onAction="#navigateToNewVeterinarian" style="-fx-background-color: #111459; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-weight: bold;" />
        </HBox>

        <ImageView fitHeight="40.0" fitWidth="400.0" preserveRatio="true">
            <Image url="@../images/img.png" />
            <VBox.margin>
                <Insets top="20" />
            </VBox.margin>
        </ImageView>
    </VBox>
</VBox>
